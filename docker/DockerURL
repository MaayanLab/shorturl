FROM ubuntu:20.04

mkdir /shorturl

RUN apt-get update && apt-get install -y \
	vim \
	wget

# Python installs
RUN apt-get update && apt-get install -y \
	python3 \
	python3-dev \
	python3-pip \
	python3-setuptools

# pip installs
RUN pip3 install -Iv Flask
RUN pip3 install numpy
RUN pip3 install pymysql

EXPOSE 3000
