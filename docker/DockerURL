FROM ubuntu:20.04

RUN mkdir /shorturl

RUN apt-get update && apt-get install -y \
	vim \
	wget

# Python installs
RUN apt-get update && apt-get install -y \
	python3 \
	python3-dev \
	python3-pip \
	python3-setuptools

# pip installs
RUN pip3 install tornado
RUN pip3 install boto3
RUN pip3 install requests

EXPOSE 5000
